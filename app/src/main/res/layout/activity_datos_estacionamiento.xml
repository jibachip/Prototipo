<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.prototipo.Datos_estacionamiento"
    android:background="@drawable/fondo1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDatEst"
        android:text="Datos Estaconamiento"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvDatEst"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Nombre"
        android:id="@+id/etNombreEst"
        android:layout_marginTop="40dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horario"
        app:layout_constraintTop_toBottomOf="@+id/etNombreEst"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/tvHora"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="De"
        android:id="@+id/de"
        app:layout_constraintTop_toBottomOf="@+id/tvHora"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/spHoraInic"
        android:layout_marginTop="23dp"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/de"
        app:layout_constraintTop_toBottomOf="@+id/tvHora"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/spHoraInic"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:id="@+id/a"
        app:layout_constraintTop_toBottomOf="@+id/spHoraInic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/spHoraInic"
        android:layout_marginTop="23dp"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/de"
        app:layout_constraintTop_toBottomOf="@+id/spHoraInic"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/spHoraCierre"
        android:layout_marginTop="10dp"
        android:animateLayoutChanges="true"
        />
    <EditText
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spHoraCierre"
        android:hint="Espacios"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:id="@+id/etEspacios" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etPrecioHora"
        android:hint="Precio por hora"
        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/etEspacios"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etPrecioFracc"
        android:hint="Precio por fraccion"
        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/etPrecioHora"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direccion"
        android:id="@+id/btnDireccion"
        app:layout_constraintTop_toBottomOf="@id/etPrecioFracc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableStart="@drawable/ic_my_location_black_24dp"
        android:drawablePadding="4dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:id="@+id/RegistrarEst"
        app:layout_constraintTop_toBottomOf="@id/btnDireccion"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:drawableLeft="@drawable/ic_check_black_24dp"
        android:drawablePadding="4dp"/>
</android.support.constraint.ConstraintLayout>
