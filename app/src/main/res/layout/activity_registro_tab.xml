<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.prototipo.RegistroTab"
    android:background="@drawable/fondo1">

    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="true" />
            </HorizontalScrollView>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fillViewport="true"
                >

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etCorreo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:alpha=".6"
                            android:drawableLeft="@drawable/ic_email_black_24dp"
                            android:drawablePadding="8dp"
                            android:hint="@string/regCorreo"

                            android:inputType="textEmailAddress"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etConfContra" />

                        <EditText
                            android:id="@+id/etUsuario"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:alpha=".6"
                            android:drawableLeft="@drawable/ic_person_black_24dp"
                            android:drawablePadding="8dp"
                            android:hint="@string/regus"
                            android:inputType="textPersonName"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/etContraseña"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:alpha=".6"
                            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                            android:drawablePadding="8dp"
                            android:hint="@string/regcon"
                            android:inputType="textPassword"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etUsuario" />

                        <EditText
                            android:id="@+id/etConfContra"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:alpha=".6"
                            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                            android:drawablePadding="8dp"
                            android:hint="@string/regconf"
                            android:inputType="textPassword"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etContraseña" />

                        <Button
                            android:id="@+id/p1p2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="8dp"
                            android:drawablePadding="2dp"
                            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                            android:text="@string/regS"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etCorreo"
                            app:layout_constraintVertical_bias="1.0" />

                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/tab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etNombre"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:alpha=".6"
                            android:drawablePadding="8dp"
                            android:hint="@string/tab2nombre"
                            android:inputType="textPersonName"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_constraintLeft_creator="1"
                            tools:layout_constraintRight_creator="1" />

                        <EditText
                            android:id="@+id/etApPat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:alpha=".6"
                            android:hint="@string/tap2apellidopaterno"
                            android:inputType="textPersonName"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etNombre"
                            tools:layout_constraintLeft_creator="1"
                            tools:layout_constraintRight_creator="1" />

                        <EditText
                            android:id="@+id/etApMat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:alpha=".6"
                            android:hint="@string/tap2apellidomaterno"
                            android:inputType="textPersonName"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etApPat"
                            tools:layout_constraintLeft_creator="1"
                            tools:layout_constraintRight_creator="1" />

                        <EditText
                            android:id="@+id/etFechaN"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:alpha=".6"
                            android:hint="dd/MM/yyyy"
                            android:inputType="date"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etApMat"
                            tools:layout_constraintLeft_creator="1"
                            tools:layout_constraintRight_creator="1" />

                        <Spinner
                            android:id="@+id/spGenero"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"

                            android:gravity="center_vertical"
                            android:spinnerMode="dialog"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etFechaN" />

                        <TextView
                            android:id="@+id/tvTipUs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginTop="10dp"
                            android:alpha=".6"
                            android:background="#fff"
                            android:gravity="center"
                            android:text="@string/tab2tipodeusuario"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/spGenero" />

                        <RadioGroup
                            android:id="@+id/rbgUsu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@id/tvTipUs">

                            <RadioButton
                                android:id="@+id/rbCliente"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:checked="true"
                                android:text="@string/tab2cliente" />

                            <RadioButton
                                android:id="@+id/rbDueño"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text="@string/tab2dueño" />
                        </RadioGroup>

                        <Button
                            android:id="@+id/p2p3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="10dp"
                            android:drawableEnd="@drawable/ic_navigate_next_black_24dp"
                            android:text="@string/tab2siguiente"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/rbgUsu" />
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/tab3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCuenta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/Gris"
                            android:gravity="center"
                            android:text="@string/tab3tipodecuenta"
                            android:textColor="@color/negro"
                            android:textSize="18sp"
                            app:layout_constraintRight_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <RadioGroup
                            android:id="@+id/rbgCuenta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            app:layout_constraintLeft_toRightOf="parent"
                            app:layout_constraintRight_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvCuenta">

                            <RadioButton
                                android:id="@+id/rbRegu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:checked="true"
                                android:text="@string/tab3regular" />

                            <RadioButton
                                android:id="@+id/rbPremium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text="@string/tab3premium" />
                        </RadioGroup>

                        <TextView
                            android:id="@+id/tvInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/Gris"
                            android:gravity="center"
                            android:text="@string/tab3informaciondelvehiculo"
                            android:textColor="@color/negro"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/rbgCuenta" />

                        <EditText
                            android:id="@+id/etMatricula"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:alpha=".6"
                            android:hint="@string/tab3matricula"
                            android:inputType="textPersonName"
                            app:layout_constraintRight_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvInfo" />

                        <Button
                            android:id="@+id/btnRegCliente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="16dp"
                            android:alpha=".8"
                            android:background="#4caf50"
                            android:text="@string/tab3registrar"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/tab4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/etNombreEst"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginTop="20dp"
                            android:hint="@string/tab4nombredelestacionamiento"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvDatEst" />

                        <EditText
                            android:id="@+id/etRFC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="20dp"
                            android:hint="@string/tab4rfc"
                            app:layout_constraintRight_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etNombreEst" />

                        <TextView
                            android:id="@+id/tvHora"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="@string/tab4horario"
                            android:textAlignment="center"
                            android:textColor="@color/negro"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/etRFC" />

                        <TextView
                            android:id="@+id/de"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:text="@string/tab4de"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintRight_toLeftOf="@+id/spHoraInic"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvHora" />

                        <Spinner
                            android:id="@+id/spHoraInic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintLeft_toRightOf="@+id/de"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvHora" />

                        <TextView
                            android:id="@+id/a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/tab4a"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintLeft_toRightOf="@id/spHoraInic"
                            app:layout_constraintRight_toLeftOf="@id/spHoraCierre"
                            app:layout_constraintTop_toBottomOf="@+id/tvHora" />

                        <Spinner
                            android:id="@+id/spHoraCierre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:animateLayoutChanges="true"
                            app:layout_constraintLeft_toRightOf="@+id/a"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvHora" />

                        <TextView
                            android:id="@+id/tvPrecio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginTop="20dp"
                            android:text="@string/tab4precio"
                            android:textAlignment="center"
                            android:textColor="@color/negro"

                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/spHoraCierre" />

                        <EditText
                            android:id="@+id/etPrecioHora"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                            android:hint="@string/tab4precioporhora"
                            android:inputType="numberDecimal"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvPrecio" />

                        <EditText
                            android:id="@+id/etPrecioFracc"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                            android:hint="@string/tab4precioporfraccion"
                            android:inputType="numberDecimal"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etPrecioHora" />

                        <Button
                            android:id="@+id/btnsigEst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:layout_marginRight="16dp"
                            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                            android:text="@string/tab4Siguiente"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent" />

                    </android.support.constraint.ConstraintLayout>


                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/tab5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tvDir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/redondeado_blanco_transparente"
                            android:gravity="center"
                            android:padding="12dp"
                            android:text="@string/tab5direccion"
                            android:textSize="18sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/etCalle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/redondeado_amarillo"
                            android:hint="@string/tab5calle"
                            android:inputType="textPersonName"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvDir" />

                        <EditText
                            android:id="@+id/etNumExt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/redondeado_amarillo"
                            android:hint="@string/tab5numeroexterior"
                            app:layout_constraintRight_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etCalle" />

                        <EditText
                            android:id="@+id/etColonia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/redondeado_amarillo"
                            android:hint="@string/tab5colonia"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etNumExt" />

                        <EditText
                            android:id="@+id/etCP"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:hint="@string/tab5cp"
                            app:layout_constraintTop_toBottomOf="@id/etColonia" />

                        <EditText
                            android:id="@+id/etCiudad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/redondeado_amarillo"
                            android:hint="@string/tab5Ciudad"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etCP" />

                        <EditText
                            android:id="@+id/etEstado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/redondeado_amarillo"
                            android:hint="@string/tab5estado"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etCiudad" />

                        <Button
                            android:id="@+id/btnRegisDueño"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:background="@drawable/redondeado_amarillo"
                            android:backgroundTint="#4caf50"
                            android:padding="12dp"
                            android:text="@string/tab5registrar"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etEstado"
                            app:layout_constraintVertical_bias=".9" />
                    </android.support.constraint.ConstraintLayout>


                </FrameLayout>
            </ScrollView>

        </LinearLayout>
    </TabHost>
</android.support.constraint.ConstraintLayout>
