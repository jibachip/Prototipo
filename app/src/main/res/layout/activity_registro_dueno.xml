<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:textSize="18sp"
    android:layout_height="wrap_content"
    android:text="Dirección"
    android:background="@drawable/redondeado_blanco_transparente"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_margin="8dp"
    android:id="@+id/tvDir"
    android:padding="12dp"
    android:gravity="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Calle"
        android:id="@+id/etCalle"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvDir"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/redondeado_amarillo"
        android:inputType="textPersonName"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Num Ext"
        android:id="@+id/etNumExt"
        android:background="@drawable/redondeado_amarillo"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/etCalle"
        app:layout_constraintRight_toLeftOf="parent"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etColonia"
        android:hint="Colonia"
        android:background="@drawable/redondeado_amarillo"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/etNumExt"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/redondeado_amarillo"
        android:hint="Codigo Postal"
        android:layout_margin="8dp"
        android:id="@+id/etCP"
        app:layout_constraintTop_toBottomOf="@id/etColonia"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etCiudad"
        android:hint="Ciudad"
        android:background="@drawable/redondeado_amarillo"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/etCP"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etEstado"
        android:hint="Estado"
        android:background="@drawable/redondeado_amarillo"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/etCiudad"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/redondeado_amarillo"
        android:backgroundTint="#4caf50"
        android:text="Registrar"
        android:padding="12dp"
        android:id="@+id/btnRegisDueño"
        app:layout_constraintTop_toBottomOf="@id/etEstado"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".9"
        android:layout_margin="16dp"/>

</android.support.constraint.ConstraintLayout>
