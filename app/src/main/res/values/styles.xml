<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimario</item>
        <item name="colorPrimaryDark">@color/colorPrimario</item>
        <item name="colorAccent">@color/rojo</item>
        <item name="android:colorBackground">@color/rojo</item>
        <item name="android:navigationBarColor">@color/rojo</item>
        <item name="android:colorForeground">@color/negro</item>
        <item name="android:textColorSecondaryInverse">@color/colorPrimario</item>
        <item name="android:textColorPrimary">@color/negro</item>
        <item name="android:textColorSecondary">@color/rojo</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/Gris</item>
        <item name="colorAccent">@color/amarillo</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">@color/negro</item>
        <item name="android:iconTint">@color/negro</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
